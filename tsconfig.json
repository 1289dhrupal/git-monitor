{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "strict": true,
        "target": "ESNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ]
        },
        "types": [
            "vite/client",
            "node"
        ]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts", // This makes TS recognize our auto-generated types
        "resources/js/**/*.vue",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}